<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Manage Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
</head>

<body>
  <%- include('./../partials/footer') %>

  <div class="container mt-2">
    <%- include('./partials/header') %>
    <hr>

    <div style="border: 1px solid black; padding: 16px; border-radius: 16px;">
      <h2>Add new Admin</h2>
      <form method="post" action="/admin/new-admin">
        <div class="form-group">
          <label for="email">New Email address</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter Admin email" />
        </div>
        <br />
        <div class="form-group">
          <label for="password">New Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Password" />
        </div>
        <br />
        <button type="submit" class="btn btn-primary">
          Add User
        </button>
      </form>
    </div>
    <br>
    <h1>ADMINS</h1>
    <br>

    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Email</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i<admins.length; i++){ %>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td><%= admins[i].email %></td>
          <td>
            <form action="/admin/update-password" method="post">
              <input type="hidden" name="email" value="<%= admins[i].email %>">
              <button class="btn btn-warning" type="submit">Update Password</button>
            </form>
          </td>
          <td>
            <form action="/admin/delete-admin" method="post">
              <input type="hidden" name="email" value="<%= admins[i].email %>">
              <button class="btn btn-warning" type="submit">Delete Admin</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <br>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>

</html>